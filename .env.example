# Student Tracker environment variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git!

# Canvas LMS Integration
# Get your API token from Canvas: Settings → Approved Integrations → New Access Token
CANVAS_API_TOKEN=your_canvas_token_here

# Find your course ID in the Canvas URL: /courses/XXXXX
CANVAS_COURSE_ID=your_course_id_here

# Canvas base URL (default is Montclair)
CANVAS_BASE_URL=https://montclair.instructure.com

# Anthropic API Key for Claude Haiku evaluations
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Custom database location (defaults to student_tracker.db)
# STUDENT_TRACKER_DB=path/to/database.db

# Optional: Flask secret key (for session security in production)
# FLASK_SECRET_KEY=your_random_secret_here
